%h2 Table of Doom
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th.sortable{"ng-click"=>"sortingOrder.property = 'odometer'; sortingOrder.descending = !sortingOrder.descending"}
        Odometer
        %span.glyphicon.glyphicon-sort{"show-on-hover-parent"=>true}
      %th.sortable{"ng-click"=>"sortingOrder.property = 'price'; sortingOrder.descending = !sortingOrder.descending"}
        Price
        %span.glyphicon.glyphicon-sort{"show-on-hover-parent"=>true}
      %th.sortable{"ng-click"=>"sortingOrder.property = 'volume'; sortingOrder.descending = !sortingOrder.descending"}
        Volume
        %span.glyphicon.glyphicon-sort{"show-on-hover-parent"=>true}
      %th.sortable{"ng-click"=>"sortingOrder.property = 'date'; sortingOrder.descending = !sortingOrder.descending"}
        Date
        %span.glyphicon.glyphicon-sort{"show-on-hover-parent"=>true}
      %th Modifiers
      %th Actions
  %tbody
    %tr{"ng-repeat"=> "fillup in fillups | orderBy:predicate:sortingOrder.descending"}
      %td {{ fillup.odometer | number }}
      %td {{ fillup.price | number:3 }}
      %td {{ fillup.volume | number:3 }}
      %td {{ fillup.date | date}}
      %td
        %span.label.label-info{"ng-show"=>"fillup.partial"} P
        %span.label.label-danger{"ng-show"=>"fillup.missed"} M
      %td.actions
        %a{href:'#', title: 'View'}
          %span.glyphicon.glyphicon-eye-open
        %a{href:'#', title: 'Edit'}
          %span.glyphicon.glyphicon-edit
        %a{href:'#', title: 'Remove'}
          %span.glyphicon.glyphicon-remove
