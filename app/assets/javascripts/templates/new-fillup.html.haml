%form.form-horizontal{name: "fillupForm", "ng-submit"=>"createFillup(fillupForm.$valid)", novalidate: true}
  %fieldset
    .form-group{"ng-class"=>"{ 'has-error' : fillupForm.odometer.$invalid && fillupForm.odometer.$dirty }"}
      %label.control-label.col-sm-2{for: "odometer"} Odometer
      .col-sm-10
        .input-group
          %input#new-odometer.form-control{name: "odometer", type: "number", min: 0.1, step: 0.1, placeholder: 123456, required: true, autofocus: true, "ng-model"=>"fillup.odometer"}
          %span.input-group-addon Miles
        %p.help-block{"ng-show"=>"fillupForm.odometer.$invalid && fillupForm.odometer.$dirty"} The odometer is required.
    .form-group{"ng-class"=>"{ 'has-error' : fillupForm.price.$invalid && fillupForm.price.$dirty }"}
      %label.control-label.col-sm-2{for: "price"} Price
      .col-sm-10
        .input-group
          %span.input-group-addon $
          %input#new-price.form-control{name: "price", type: "number", min: 0.01, step: 0.01, placeholder: 3.259, required:true, "ng-model"=>"fillup.price"}
        %p.help-block{"ng-show"=>"fillupForm.price.$invalid && fillupForm.price.$dirty"} The price is required.
    .form-group{"ng-class"=>"{ 'has-error' : fillupForm.volume.$invalid && fillupForm.volume.$dirty }"}
      %label.control-label.col-sm-2{for: "volume"} Volume
      .col-sm-10
        .input-group
          %input#new-volume.form-control{name: "volume", type: "number", min: 0.01, step: 0.001, placeholder: 3.259, required:true, "ng-model"=>"fillup.volume"}
          %span.input-group-addon Gallons
        %p.help-block{"ng-show"=>"fillupForm.volume.$invalid && fillupForm.volume.$dirty"} The volume is required.
    .form-group{"ng-class"=>"{ 'has-error' : fillupForm.date.$invalid && fillupForm.date.$dirty }"}
      %label.control-label.col-sm-2{for: "date"} Date
      .col-sm-10
        %input#new-date.form-control{name: "date", type: "date", placeholder: "2014-12-31", required: true, "ng-model"=>"fillup.date"}
        %p.help-block{"ng-show"=>"fillupForm.date.$invalid && fillupForm.date.$dirty"} The date is required.
    .form-group
      %label.control-label.col-sm-2{for: "modifiers"} Modifiers
      .col-sm-10
        %label.checkbox-inline{for: "missed-modifier"}
          %input#new-missed-modifier{name: "new-modifiers", type: "checkbox", "ng-model"=>"fillup.missed"} Missed
        %label.checkbox-inline{for: "partial-modifier"}
          %input#new-partial-modifier{name: "new-modifiers", type: "checkbox", "ng-model"=>"fillup.partial"} Partial
    .form-group
      %label.control-label.col-sm-2 Total
      .col-sm-2
        %h4 {{fillup.price * fillup.volume | currency}}
      .col-sm-7
        %button.btn.btn-default.pull-right{type: "submit", "ng-disabled"=>"fillupForm.$invalid"} Submit
      .col-sm-1
        %button.btn.btn-danger.pull-right Cancel
