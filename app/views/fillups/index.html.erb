<h1>Listing fillups</h1>

<table>
  <thead>
    <tr>
      <th>Odometer</th>
      <th>Price</th>
      <th>Volume</th>
      <th>Date</th>
      <th>Missed</th>
      <th>Partial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fillups.each do |fillup| %>
      <tr>
        <td><%= fillup.odometer %></td>
        <td><%= fillup.price %></td>
        <td><%= fillup.volume %></td>
        <td><%= fillup.date %></td>
        <td><%= fillup.missed %></td>
        <td><%= fillup.partial %></td>
        <td><%= link_to 'Show', fillup %></td>
        <td><%= link_to 'Edit', edit_fillup_path(fillup) %></td>
        <td><%= link_to 'Destroy', fillup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fillup', new_fillup_path %>
