%html{:"ng-app"=>"FillupApp"}
  %head
    %title Rails41Angular
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular-route.min.js'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular-resource.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js'
    = javascript_include_tag 'application', controller_name
    = javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js'
    = csrf_meta_tags
  %body
    = yield
    .container{:"ng-view"=>true}
